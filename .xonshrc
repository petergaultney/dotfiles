def cd_repo_root():
    cwd = Path(os.getcwd())
    while not (cwd / '.git').exists() and cwd != Path('/'):
        cwd = cwd.parent
    if cwd == Path('/'):
        print('No git repo found')
    else:
        os.chdir(cwd)


def mono(args):
    orig_dir = os.getcwd()
    cd_repo_root()
    try:
        @(['uv', 'run', 'mono', *args])
    finally:
        os.chdir(orig_dir)


aliases['mon'] = mono

